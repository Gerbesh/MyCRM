# Тип БД: mysql, postgres, sqlite
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=crm
DB_USER=user
DB_PASSWORD=password

# Параметры пула соединений
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=280

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# Сессии
# SESSION_TYPE=redis          # или 'sqlalchemy'
# REDIS_URL=redis://:password@redis:6379/0

# Flask-Limiter (обязателен в production)
# RATELIMIT_STORAGE_URL=redis://:password@redis:6379/1

# reCAPTCHA v3 (опционально, рекомендуется для production)
# Получите ключи на https://www.google.com/recaptcha/admin
# RECAPTCHA_SITE_KEY=
# RECAPTCHA_SECRET_KEY=
# RECAPTCHA_MIN_SCORE=0.5

# Дополнительный токен для клиентских событий (опционально)
# AUDIT_EVENT_TOKEN=

# Фичефлаги
SHOW_DETAILED_ERRORS=true
LOG_SENSITIVE=true
FORCE_ALEMBIC_ONLY=false
ALLOW_SYSTEMCTL_RESTART=false
SYSTEMD_SERVICE_NAME=crm.service
# APP_RESTART_COMMAND=sudo systemctl restart {service}
# DEPLOY_RESTART_COMMAND=systemctl restart crm.service


# Deploy (GUI/rsync)
# Проверка хэшей изменённых файлов на сервере
# DEPLOY_CHECK_URL=https://gerbesh.ru/api/v1/deploy/check
# DEPLOY_CHECK_LOGIN=
# DEPLOY_CHECK_PASSWORD=
# DEPLOY_CHECK_KEY=
# DEPLOY_HMAC_SECRET=

# Параметры подключения для GUI (могут переиспользоваться для SFTP/rsync)
# DEPLOY_FTP_HOST=gerbesh.ru
# DEPLOY_FTP_PORT=21
# DEPLOY_FTP_USER=crm
# ALLOW_FTP_DEPLOY=true   # false → только SFTP/rsync

# SSH-деплой (рекомендуется хранить реальные данные в .env)
# DEPLOY_SSH_HOST=gerbesh.ru
# DEPLOY_SSH_PORT=22
# DEPLOY_SSH_USER=crm_deployer
# DEPLOY_SSH_PASSWORD=
# DEPLOY_TARGET_DIR=/home/crm/apps/crm-app
# ---
# Deploy (SFTP only)
# GUI деплой работает только через SSH/SFTP; FTP/FTPS и API-check отключены.
# Обязательные параметры:
# DEPLOY_SSH_HOST=
# DEPLOY_SSH_PORT=22
# DEPLOY_SSH_USER=
# DEPLOY_SSH_PASSWORD=           # можно оставить пустым при использовании ключа
# DEPLOY_SSH_KEY=                # путь к приватному ключу (если не задан — берётся ~/.ssh/id_rsa)
# DEPLOY_TARGET_DIR=
# ALLOW_FTP_DEPLOY=false         # FTP отключён
